name: Release

env:
    PROJECT_NAME: fanqie

on:
    workflow_run:
        workflows: ["Build"]
        types:
            - completed
    push:
        tags:
            - "v*"

jobs:
    release:
        runs-on: ubuntu-latest
        steps:
            - name: Checkout code
              uses: actions/checkout@v2
            - name: Release
              uses: softprops/action-gh-release@v2
